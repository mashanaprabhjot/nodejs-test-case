<h1>Transactions page</h1>


<form action="/createtransaction" Method="Post" class="form-horizontal col-xs-12 col-sm-12 col-md-8 col-lg-8">
  Welcome <span id="username"><%=username%></span>
  <p>
    Your token:<span id="token"><%=token%></span>
  </p>
  
  <h2>Create Stripe Payments</h2>
  <div class="form-group">
    <label for="amount" class="col-sm-2">Amount:</label>
    <div class="col-sm-10">
      <input type="number" name="amount" id="amount" class="form-control"/>
    </div>
  </div>
  
  <div class="form-group">
    <label for="currency" class="col-sm-2">Currency: </label>
    <div class="col-sm-10">
      <input type="text" name="currency" id="currency" class="form-control"/>
    </div>
  </div>
  <%if (stripe_cust_id ==""){ %>
  <div class="form-group">
    <label for="cardnumber" class="col-sm-2">Card number </label>
    <div class="col-sm-10">
      <input type="text" name="customerid" id="cardnumber" class="card-number form-control" />
    </div>
  </div>

  <div class="form-group">
    <label for="cvc" class="col-sm-2">CVC: </label>
    <div class="col-sm-10">
      <input type="number" name="cvc" id="cvc" class="card-cvc form-control" />
    </div>
  </div>

  <div class="form-group">
    <label for="card-expiry-month" class="col-sm-2">Expired Month: </label>
    <div class="col-sm-10">
      <input type="number" name="card-expiry-month" id="card-expiry-month" class="card-expiry-month form-control" />
    </div>
  </div>

  <div class="form-group">
    <label for="card-expiry-year" class="col-sm-2">Expired Year: </label>
    <div class="col-sm-10">
      <input type="number" name="card-expiry-year" id="card-expiry-year" class="card-expiry-year form-control" />
    </div>
  </div>
  <% } else { %>
  <div class="form-group">
    <div class="col-sm-10">
      We already have you card details with Stripe Payments.
    </div>
  </div>
  <% } %>
  <p class="payment-errors"></p>
  <input type="button" class="submittransaction btn btn-primary col-md-2" id="submittransaction" value="Pay"/>
</form>